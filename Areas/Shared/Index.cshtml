@page
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "/Areas/Identity/Pages/Account/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        body {
            background-image: url("https://www.sliit.lk/wp-content/uploads/2018/02/minimalizm-gradient-background.jpg");
        }

        .content {
            align-items: center;
            padding-top: 100px;
            padding-left: 50px;
            padding-right: 50px
        }

        .row-button {
            margin-top: 15px;
        }

        .page_header {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1 class="page_header">Welcome to Poster</h1>
        <a href="@Url.Action("Blog", "Home")" title="Read the blog">
            <button type="button" class="btn btn-primary btn-lg btn-block row-button">Blog</button>
        </a>

        <a href="@Url.Action("Create", "Home")" title="Create new Post">
            <button type="button" class="btn btn-secondary btn-lg btn-block row-button">Create NEW Post</button>
        </a>
    </div>
</body>
</html>
